    %h1 Resume
    = simple_form_for @carrier,url:carriers_path do |f|
      %p
        = f.input :first_name
      %p
        = f.input :last_name
      %p
        = f.input :city
      %p
        = f.input :state
      %p
        = f.input :country
      %p
        = f.input :email
      %p
        = f.input :phone
      %p
        = f.input :resume, as: :file,:label=> "upload resume"
      %p
        = f.input :photo, as: :file,label:"upload photo"
      = f.submit:"create resume",class:"btn btn-success"
